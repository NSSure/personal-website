<%- contentFor('body') %>
<div class="site">
    <div class="content">
        <% for (var i = 0; i < projects.length; i++) { %>
        <div class="project-card">
                <img class="project-image" src="<%= projects[i].gif %>" />
                <div class="project">
                    <h2 class="title">
                        <a href="https://snippets.nsgordon.com">
                            <%= projects[i].name %>
                        </a>
                    </h2>
                    <p class="description">
                        <%= projects[i].description %>
                    </p>
                    <div class="d-inline">
                        <div class="badge yellow">JavaScript</div>
                        <div class="badge green">Vue</div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
    .d-inline {
        display: flex;
        flex-direction: row;
    }

    .project-card {
        background-color: white;
        box-shadow: 0px 3px 15px rgba(0, 0, 0, 0.1);
        padding: 15px;
        display: flex;
        flex-direction: row;
        margin-bottom: 50px;
    }

    .project-card>.project {
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: left;
    }

    .project-card>.project>.title {
        margin: 0;
    }

    .project-image {
        margin-right: 15px;
    }

    .site {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        flex-grow: 1;
        margin: 50px;
    }

    .content {
        align-items: center;
        text-align: center;
    }

    .badge {
        background-color: transparent;
        color: #383838;
        padding: 10px;
        border-radius: 5px;
        margin-right: 10px;
    }

    .yellow {
        background-color: #FFCA28;
    }

    .green {
        background-color: #41B883;
    }
</style>