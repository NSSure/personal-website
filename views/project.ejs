<div class="project">
    <div id="issues">
        Project Issues

        <% for (var i = 0; i < issues.length; i++) { %>
            <div class="item">
                <h5><span><a href="<%= issues[i].html_url %>" target="_blank"><%= issues[i].title %></a></span></h5>
                <div style="margin-bottom: 15px;"><%= issues[i].body %></div>

                <div style="margin-bottom: 15px; font-size: .75rem;">Created at: <%= moment(issues[i].created_at).format('MM-DD-YYYY') %> // Updated at: <%= moment(issues[i].updated_at).format('MM-DD-YYYY') %> // Issue #<%= issues[i].number %></div>

                <% for (var ii = 0; ii < issues[i].labels.length; ii++) { %>
                    <div class="badge" style="background-color: #<%= issues[i].labels[ii].color %>"><%= issues[i].labels[ii].name %></div>
                <% } %>
            </div>
        <% } %>
    </div>
</div>

<style>
    .project {
        padding: 50px;
    }

    #issues {
        background-color: white;
        padding: 15px;
        width: 50%;
        margin: 0 auto;
    }

    #issues .item {
        background-color: #ffffff;
        border: 1px solid #e7e7e7;
        padding: 15px;
    }

    #issues .item > .header {
        padding: 15px;
        background-color: #F0F0F0;
        border-bottom: 2px dashed silver;
    }

    #issues .item > .content {
        padding: 15px;
    }
</style>

<% /* Place any scripts contained in views at the end of the page. */ %>