<div class="container">
    <div class="project">
        <img class="image" src="<%= repository.owner.avatar_url %>" />
        <div class="content">
            <h4><a href="<%= repository.html_url %>" target="_blank"><%= repository.name %></a></h4>
            <p>Authored by: <%= repository.owner.login %></p>
            <p>Language: <%= repository.language %></p>
            <p>Open issues: <%= repository.open_issues_count %></p>
            <p><%= repository.description %></p>

                <% for (var i = 0; i < repository.topics ? repository.topics.length : 0; i++) { %>
                    <div class="badge yellow"><%= repository[i] %></div>
                <% } %>
        </div>
    </div>

    <br>

    <div id="issues">
        <h5 style="padding: 15px 0;">Repository Issues - Displaying <%= issues.length %> issue(s)</h5>

        <% for (var i = 0; i < issues.length; i++) { %>
            <div class="item">
                <h5><span><a href="<%= issues[i].html_url %>" target="_blank"><%= issues[i].title %></a></span></h5>
                <div style="margin-bottom: 15px;"><%= issues[i].body %></div>

                <div style="margin-bottom: 15px; font-size: .75rem;">Created at: <%= moment(issues[i].created_at).format('MM-DD-YYYY') %> // Updated at: <%= moment(issues[i].updated_at).format('MM-DD-YYYY') %> // Issue #<%= issues[i].number %></div>

                <% for (var ii = 0; ii < issues[i].labels.length; ii++) { %>
                    <div class="badge" style="background-color: #<%= issues[i].labels[ii].color %>"><%= issues[i].labels[ii].name %></div>
                <% } %>
            </div>
        <% } %>
    </div>
</div>

<style>
    .project {
        background-color: #ffffff;
        display: flex;
        flex-direction: row;
    }

    .project > .image {

    }

    .project > .content {
        padding: 15px;
    }

    #issues {
        background-color: white;
        padding: 15px;
    }

    #issues .item {
        background-color: #ffffff;
        border: 1px solid #e7e7e7;
        padding: 15px;
    }

    #issues .item > .header {
        padding: 15px;
        background-color: #F0F0F0;
        border-bottom: 2px dashed silver;
    }

    #issues .item > .content {
        padding: 15px;
    }
</style>

<% /* Place any scripts contained in views at the end of the page. */ %>